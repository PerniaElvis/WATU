sb-layout-blog
    
    sb-clean-blog-header(
        backgroundImage='url("assets/img/home-bg.jpg")',
        heading='WATu: Tu buscador de Agencias de Intercambio Cultural',
        subHeading='Encuentra toda la informaci√≥n de agencias de Work An Travel en un solo sitio',
        [siteHeading]='true'
    )

    sb-demo-info(*ngIf='!isLoggedIn')

    ng-container(
        *ngIf='posts$ | async as posts'
    )
        .container
            .row
                .col-lg-8.col-md-10.mx-auto
                    .post-preview(
                        *ngFor='let post of posts'
                    )
                        a([routerLink]='post.slug')
                            h2.post-title {{post.heading}}
                            h3.post-subtitle {{post.subHeading}}
                                
                        p.post-meta {{post.meta}}
